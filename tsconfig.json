{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom", "es2017.object", "es2016.array.include"],
        "noImplicitAny": true,
        "noImplicitReturns":false,
        "noFallthroughCasesInSwitch":true,
        "allowUnreachableCode":true,
        "allowUnusedLabels":true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "spec/**/*"
    ]
}
